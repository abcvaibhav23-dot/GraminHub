APP_NAME=GraminHub
APP_ENV=development
DEBUG=0
# UI version:
# - v1: current MVP UI
# - v2: simplified rural-first UI
UI_MODE=v2
# Show demo labels/IDs in UI (keep 0 for real usage)
SHOW_DEMO_HINTS=0
# Production: set APP_ENV=production and DB_BOOTSTRAP_MODE=migrations (use Alembic).
DB_BOOTSTRAP_MODE=runtime
DATABASE_URL=postgresql+psycopg2://marketplace:marketplace@localhost:5432/marketplace
POSTGRES_USER=marketplace
POSTGRES_PASSWORD=marketplace
POSTGRES_DB=marketplace
# Production: set a long random secret (do not keep "change-me")
JWT_SECRET_KEY=change-me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# OTP configuration
OTP_CODE_LENGTH=6
OTP_EXPIRY_MINUTES=5
OTP_MAX_VERIFY_ATTEMPTS=5
OTP_RESEND_INTERVAL_SECONDS=30

# OTP delivery
# - development: "console" or "webhook"
# - production: prefer "webhook"
OTP_DELIVERY_MODE=console
OTP_WEBHOOK_URL=
OTP_WEBHOOK_TOKEN=

# Optional pepper for OTP hashing (defaults to JWT_SECRET_KEY if empty)
OTP_HASH_PEPPER=

# Production: MUST be 0
OTP_EXPOSE_IN_RESPONSE=1

CORS_ORIGINS=http://localhost:8000,https://graminhub.in,https://www.graminhub.in
RATE_LIMIT_PER_MINUTE=120
ADMIN_PHONE_ALLOWLIST=9000000001
PUBLIC_SUPPORT_EMAIL=support@graminhub.in
PUBLIC_SUPPORT_PHONE=+91-6362272078
PUBLIC_SUPPORT_WHATSAPP=+91-6362272078

# AI Search (ChatGPT-style assistant)
# Set AI_SEARCH_ENABLED=1 and provide OPENAI_API_KEY to enable AI search on the v2 homepage.
AI_SEARCH_ENABLED=0
AI_SEARCH_ALLOWED_HOSTS=localhost,127.0.0.1,graminhub.in,www.graminhub.in,graminhub.com,www.graminhub.com
AI_SEARCH_RATE_LIMIT_PER_MINUTE=20
AI_SEARCH_TIMEOUT_SECONDS=12
AI_SEARCH_MAX_QUERY_CHARS=320

# OpenAI (server-side only; never expose this key to frontend)
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-5
